{
  "name": "Y2Media",
  "version": "0.1.0",
  "description": "Easily download videos from YouTube.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "publish": "electron-builder -p always",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halocedark/y2media-updates.git"
  },
  "build": {
    "asar": true,
    "afterPack": "afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "halocedark",
      "repo": "y2media-updates"
    },
    "appId": "com.halocdz.y2media",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/ico/favicon.ico",
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "asarmor": "^2.0.0",
    "child_process": "^1.0.2",
    "ejs-electron": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-root-path": "^1.0.16",
    "electron-updater": "^4.6.5",
    "fs-extra": "^10.0.1",
    "ini": "^2.0.0",
    "jquery": "^3.6.0",
    "js-sha1": "^0.6.0",
    "node-powershell": "^5.0.1",
    "uuid": "^8.3.2",
    "ytdl-core": "^4.11.0"
  },
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13"
  }
}
